{
  "name": "token-guardian",
  "version": "0.1.0",
  "description": "Advanced token security, leak prevention and rotation automation for Node.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "coverage": "jest --coverage",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "security",
    "infosec",
    "token",
    "api-key",
    "jwt",
    "secret",
    "rotation",
    "leak-prevention",
    "canary-token",
    "devsecops"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geeknik/token-guardian.git"
  },
  "bugs": {
    "url": "https://github.com/geeknik/token-guardian/issues"
  },
  "homepage": "https://github.com/geeknik/token-guardian#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "winston": "^3.11.0"
  }
}
